@{
    Layout = null;
}

@model List<Post>


<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="~/css/site.css" rel="stylesheet" />

    <title>La mia prima pizzeria</title>
  </head>
  <body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">La mia prima pizzeria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="mt-3 mb-3">Lista posts</h1>
                    </div>

                    @if(Model.Count() == 0)
                    {
                        <h3>Non ci sono post presenti</h3>
                    } else

                    {
                        <table class="table post-list-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Immagine</th>
                                <th>Titolo</th>
                                <th>Ingredienti</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach(Post postDellaLista in Model)
                                {
                            <tr>
                                <td>@postDellaLista.Id</td>
                                
                                <td class="image"><img class="post-list-image" src="https://cookingitaly.de/wp-content/uploads/2020/02/DSC06476.jpg"></td>
                                <td class="title">@postDellaLista.Titolo</td>
                                <td class="Ingredienti"> 
                                    <ol>
                                        <li>Pomodoro</li>
                                        <li>Mozzarella fiordilatte</li>

                                    </ol>
                                     </td>
                            </tr>
                                }


                            <tr>
                                <td>0</td>
                                <!-- questo è un esempio con url immagine esterna alla webapp attuale -->
                                <td class="image"><img class="post-list-image" src="https://cookingitaly.de/wp-content/uploads/2020/02/DSC06476.jpg"></td>
                                <td class="title">Margherita</td>
                                <td class="Ingredienti"> 
                                    <ol>
                                        <li>Pomodoro</li>
                                        <li>Mozzarella fiordilatte</li>

                                    </ol>
                                     </td>
                            </tr>
                            <tr>
                                <td>1</td>
                                <!-- questo è un esempio con url immagine interna alla webapp attuale -->
                                <td class="image"><img class="post-list-image" src="https://th.bing.com/th/id/OIP.f6-fwwxGwQOiVhaTm5B3SQHaFj?pid=ImgDet&rs=1"></td>
                                <td class="title">Capricciosa</td>
                                <td class="Ingredienti">
                                    <ol>
                                        <li>Pomodoro</li>
                                        <li>Mozzarella fiordilatte</li>
                                        <li>Olive nere</li>
                                        <li>Prosciutto</li>

                                    </ol>
                            <tr>
                                <td>2</td>
                                <td class="image"><img class="post-list-image" src="https://th.bing.com/th/id/R.bdf0758753c65856b0a8fff8170623ee?rik=ohEtv%2fS9Gofn3w&riu=http%3a%2f%2fparmacrown.com%2fwp-content%2fuploads%2f2015%2f03%2fPizza-4.jpg&ehk=DTQjrsDMJHzdYhM%2fs4Jyf6CtneJBPPCvAaqV2tSNojw%3d&risl=1&pid=ImgRaw&r=0"></td>
                                <td class="title">Prosciutto</td>
                                <td class="Ingredienti"> 
                                    <ol>
                                        <li>Pomodoro</li>
                                        <li>Mozzarella fiordilatte</li>
                                        <li>Olio</li>
                                        <li>Prosciutto</li>

                                    </ol>
                                </td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td class="image"><img class="post-list-image" src="https://th.bing.com/th/id/R.befbf1dc4b4badc3797f1b1f6f240642?rik=qCJ0LhdqTewNXg&pid=ImgRaw&r=0"></td>
                                <td class="title">Diavola</td>
                                <td class="Ingredienti">
                                    <ol>
                                        <li>Pomodoro</li>
                                        <li>Mozzarella fiordilatte</li>
                                        <li>Salame Piccante</li>
                                        <li>Olio</li>

                                    </ol>
                                </td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td class="image"><img class="post-list-image" src="https://th.bing.com/th/id/OIP.5ZQM7iVMPRLUpaGapGN5SQHaE8?w=270&h=180&c=7&r=0&o=5&pid=1.7"></td>
                                <td class="title">Tonno</td>
                                <td class="description">
                                    <ol>
                                        <li>Pomodoro</li>
                                        <li>Mozzarella fiordilatte</li>
                                        <li>Tonno</li>
                                        <li>Cipolla</li>

                                    </ol>
                                    </td>
                                    </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
                    }

                    

    </main>

    

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
